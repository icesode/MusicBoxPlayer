<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/notification_icon"
        android:text="Song Title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notification_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/notification_icon"
        android:text="Artist Name"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/notification_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/notification_artist"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/notification_previous"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/previous"
        android:layout_below="@id/notification_progress"
        android:layout_toLeftOf="@id/notification_play"
        android:layout_marginTop="8dp"
        />

<!--    <ImageView-->
<!--        android:id="@+id/notification_play_pause"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/notification_artist"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:layout_marginBottom="8dp"/>-->

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/notification_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/play" />

<!--    <ImageView-->
<!--        android:id="@+id/notification_pause"-->
<!--        android:layout_width="48dp"-->
<!--        android:layout_height="48dp"-->
<!--        android:src="@drawable/pause"-->
<!--        android:layout_below="@id/notification_progress"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:layout_toRightOf="@id/notification_previous"/>-->

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/next"
        android:layout_below="@id/notification_progress"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/notification_play"/>
</RelativeLayout>
